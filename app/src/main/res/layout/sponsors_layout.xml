<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background_maroon"
    android:transitionGroup="false"
    android:touchscreenBlocksFocus="false"
    android:clickable="false">

    <!--<android.support.v7.widget.Toolbar-->
        <!--android:layout_height="80dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:elevation="6dp"-->
        <!--android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"-->
        <!--android:background="#000000"-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:id="@+id/view" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OUR SPONSORS"
        android:id="@+id/simpletext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:textStyle="bold|italic" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src = "@drawable/rajmahal"
        android:id="@+id/sri_ram_jewellers"
        android:layout_alignTop="@+id/changezi_foods"
        android:layout_alignLeft="@+id/simpletext"
        android:layout_alignStart="@+id/simpletext" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src = "@drawable/wcrc"
        android:id="@+id/wcrc"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src = "@drawable/changezi_foods"
        android:id="@+id/changezi_foods"
        android:layout_below="@+id/simpletext"
        android:layout_alignRight="@+id/simpletext"
        android:layout_alignEnd="@+id/simpletext" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src = "@drawable/giri_momos_centre"
        android:id="@+id/futureworld"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/changezi_foods"
        android:layout_alignStart="@+id/changezi_foods" />

</RelativeLayout>